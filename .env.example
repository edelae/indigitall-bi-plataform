# =============================================================================
# inDigitall BI Platform — Environment Variables
# Copy this file to .env and fill in the values
# =============================================================================

# --- Flask / Dash ---
FLASK_SECRET_KEY=change-me-to-a-random-string
DEBUG=true

# --- Database (Supabase PostgreSQL) ---
DATABASE_URL=postgresql://postgres:your-super-secret-password@db:5432/postgres

# --- Supabase ---
POSTGRES_PASSWORD=your-super-secret-password
JWT_SECRET=your-super-secret-jwt-token-at-least-32-chars
ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.placeholder
SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.placeholder
SUPABASE_URL=http://localhost:8000

# --- Anthropic (AI Agent) ---
ANTHROPIC_API_KEY=sk-ant-your-key-here

# --- Sentry (Error Tracking, optional) ---
SENTRY_DSN=

# --- n8n ---
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-me

# --- Default Tenant (Dev Mode) ---
DEFAULT_TENANT=demo

# --- Auth ---
# "dev" = no auth, tenant from ?tenant= param or DEFAULT_TENANT
# "jwt" = validate indigitall JWT from cookie/header
AUTH_MODE=dev
JWT_SECRET_KEY=change-me-jwt-secret
JWT_COOKIE_NAME=indigitall_token

# --- Indigitall API (Extraction) ---
# Regional URL: am1 (Americas), eu1/eu2/eu3 (Europe)
INDIGITALL_API_BASE_URL=https://am1.api.indigitall.com
# Server-to-server auth (preferred) — get from Indigitall Console > Settings > Server Keys
INDIGITALL_SERVER_KEY=your-server-key-uuid-here
# App public key (used as applicationId) — visible in app settings
INDIGITALL_APP_TOKEN=your-app-public-key-here
# Email/password auth (alternative, for JWT-based endpoints)
INDIGITALL_EMAIL=
INDIGITALL_PASSWORD=
